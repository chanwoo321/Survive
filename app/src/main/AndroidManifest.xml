<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pathingthroughcs">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Stats"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_stats"
            android:theme="@style/FullscreenTheme"></activity>
        <activity
            android:name=".WinScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_win_screen"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".Encounter"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_encounter"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".GameOver"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_game_over"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".ui.login.Bleh"
            android:label="@string/title_activity_bleh" />
        <activity
            android:name=".FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActualGameActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="The Game"
            android:theme="@style/FullscreenTheme" />
    </application>

</manifest>